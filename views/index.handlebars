{{!-- main content --}}
<div class="mainContainer">
    {{!-- "burger image" --}}
    <div class="imgContainer" id="burgerImg" class="alignCenter">
        <img src="/assets/images/burger.png" alt="burger.png">
    </div>
    {{!-- -------------------------------------------------------------------------------- --}}

    {{!-- title --}}
    <div class="container">
        <div class="row">
            <div class="col-sm text-center" id="titleContainer">
                <h1>EAT DA BURGER!</h1>
            </div>
        </div>
        {{!-- -------------------------------------------------------------------------------- --}}

        <div class="container" id="burgerContainer">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-sm-4 text-center" class="task">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>

                {{!-- devour button --}}
                <div class="col-sm-4 text-center">
                    <form methods="POST" action="/burgers/updateOne?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <br>
                </div>

                <button type="submit" class="btn btn-danger">DEVOUR!</button>
                </form>
                {{/unless}}
                {{/each}}
                {{!-- -------------------------------------------------------------------------------- --}}

                <div class="col-sm-4 text-center" class="task">
                    {{#each burger_data}}
                    {{#if this.devoured}}
                    <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    {{!-- -------------------------------------------------------------------------------- --}}
    <div class="container" id="userBurgerContainer">
        <div class="row">
            <div class="col-sm text-center enter_section">
                <form action="/burgers/insertOne" method="POST">
                    <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                    {{!-- -------------------------------------------------------------------------------- --}}
                    {{!-- submit button --}}
                    <div class="submitButtonContainer">
                        <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
                        <p>Enter a burger you would like to eat</p>
                    </div>
                </form>
                {{!-- -------------------------------------------------------------------------------- --}}
            </div>
        </div>
    </div>
</div>